#include <iostream>
#include <cmath>
#include <cstdint>

class Power 
{
public:
    double A;
    double B;

    void set_m_A()
    {
       std::cout << "Введите вещественное число 1: " << std::endl;
       std::cin >> A;
      
    }

    void set_m_B()
    {
        std::cout << "Введите вещественное число 2: " << std::endl;
        std::cin >> B;

    }

    void calculate()
    {
        std::cout << std::pow(A, B) << std::endl;
    } 
};

class RGBA
{
private:
    std::uint8_t m_red = 0;
    std::uint8_t m_green = 0;
    std::uint8_t m_blue = 0;
    std::uint8_t m_alpha = 255;

public:
    void setRGBA(uint8_t red, uint8_t green, uint8_t blue, uint8_t alpha)
    {
        m_red = red;
        m_green = green;
        m_blue = blue;
        m_alpha = alpha;
    }
        

    void print()
    {
        std::cout << "Красный = " << static_cast<uint16_t>(m_red) << std::endl;
        std::cout << "Зелёный = " << static_cast<uint16_t>(m_green) << std::endl;
        std::cout << "Синий = " << static_cast<uint16_t>(m_blue) << std::endl;
        std::cout << "Альфа = " << static_cast<uint16_t>(m_alpha) << std::endl;
    }
};

class Stack
{
private:
    static const int SIZE = 10;
    int Array[SIZE];
    int Stack_length;

public:
    
    void reset()
    {
        Stack_length = 0;
        for (int i = 0; i < 10; ++i)
        Array[i] = 0;
    }

    bool push(int value)
    {
        if (Stack_length == 10)
        {
            return false;
        }
        else
        {
            Array[Stack_length++] = value;
            return true;
        }
    }

    int pop()
    {
        if (Stack_length > 0)
        {
            return Array[--Stack_length];
        }
    }

    void print()
    {
        std::cout << "( ";
        for (int i = 0; i < Stack_length; ++i)
        {
            std::cout << Array[i] << ' ';
        }
        std::cout << ")\n";
    }

};

int main()
{
    setlocale(LC_ALL, "Russian");
    
    Power power;
    power.set_m_A();
    power.set_m_B();
    power.calculate();

    std::cout << std::endl;

    RGBA rgba;
    rgba.setRGBA(56, 154, 66, 1);
    rgba.print();

    std::cout << std::endl;

    Stack stack;
    stack.reset();
    stack.print();

    stack.push(3);
    stack.push(7);
    stack.push(5);
    stack.print();

    stack.pop();
    stack.print();

    stack.pop();
    stack.pop();
    stack.print();
        
    return 0;
}
